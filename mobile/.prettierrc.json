{
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": false,
    "trailingComma": "all",
    "bracketSpacing": true,
    "bracketSameLine": false,
    "arrowParens": "always",
    "proseWrap": "always",
    "endOfLine": "lf",
    "overrides": [
        {
            "files": "*.js",
            "options": {
                "tabWidth": 4
            }
        },
        {
            "files": "*.md",
            "options": {
                "printWidth": 80
            }
        }
    ]
}